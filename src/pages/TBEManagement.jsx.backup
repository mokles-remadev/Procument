const TBEManagement = ({ 
  autoSave = true,
  onEvaluationComplete = () => {},
  onEvaluationUpdate = () => {},
  allowMultipleEvaluators = false,
  evaluationTimeout = 30000,
  customFields = [],
  readOnly = false,
  defaultView = 'packages',
  filterConfig = {
    showCompleted: true,
    showPending: true,
