    },
    {
      title: 'Name',
      dataIndex: 'name',
      key: 'name',
      render: (name) => <Text style={{ color: '#1890ff' }}>{name}</Text>,
    },
    {
      title: 'Specification',
      dataIndex: 'specification',
      key: 'specification',
